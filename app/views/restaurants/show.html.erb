<%= render "layouts/banner" %>

<div class="container">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="search-row">
      <%= form_tag restaurants_path, method: :get do %>
      <!-- <div class="col-xs-10 col-sm-8 col-md-3 col-lg-2"> -->
        <div class="form-group col-xs-10 col-sm-8 col-md-8 col-lg-8">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Cuisine, Neighborhood..." %>
        </div>
      <!-- </div> -->
      <div class="col-xs-10 col-sm-8 col-md-4 col-lg-4">
        <%= submit_tag 'Search', name: nil, class: "btn-search" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container-info">
  <div class="restaurant-info">
    <div class="col-xs-10 col-sm-8 col-md-5 col-xs-offset-1 col-sm-offset-2 col-md-offset-3">
      <h1><%= @restaurant.name %></h1>
      <br>
      <div class="description">
        <span class="glyphicon glyphicon-menu-hamburger "></span><%= " Description: #{@restaurant.description}" %>
      </div>
      <br>
      <div class="food_rec">
        <span class="glyphicon glyphicon-cutlery "></span><%= " Food Recommendation: #{@restaurant.food_rec}" %>
      </div>
      <br>
      <div class="wine_rec">
        <span class="glyphicon glyphicon-glass "></span><%= " Drink Recommendation: #{@restaurant.wine_rec}" %>
      </div>
      <br>
      <div class="price">
        <span class="glyphicon glyphicon-euro "></span><%= " Price per Person: #{@restaurant.price}" %>
      </div>
      <br>
      <div class="neighborhood">
        <span class="glyphicon glyphicon-globe "></span><%= " Neighborhood: #{@restaurant.neighborhood}" %>
      </div>
      <br>
      <div class="address">
        <span class="glyphicon glyphicon-map-marker "></span><%= " Address: #{@restaurant.address}" %>
      </div>
      <br>
      <div class="btn-book">
        <%= link_to "Let us book for you", new_restaurant_booking_path(@restaurant.id) %>
      </div>
      <br>
      <div
        id="map"
        style="width: 100%;
        height: 300px;"
        data-markers="<%= @markers.to_json %>">
      </div>
    </div>
  </div>
</div>


