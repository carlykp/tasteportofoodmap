<%= render "layouts/banner" %>

<div class="container-info">
  <div class="restaurant-info">
    <div class="col-xs-9 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-med-offset-3 col-lg-6 col-lg-offset-3">
      <h1><%= @restaurant.name %></h1>
      <br>
      <div class="description">
        <span class="glyphicon glyphicon-menu-hamburger "></span><%= " Description: #{@restaurant.description}" %>
      </div>
      <br>
      <div class="food_rec">
        <i class="fas fa-utensils "></i><%= " Food Recommendation: #{@restaurant.food_rec}" %>
      </div>
      <br>
      <div class="wine_rec">
        <i class="fas fa-wine-glass "></i><%= " Drink Recommendation: #{@restaurant.wine_rec}" %>
      </div>
      <br>
      <div class="price">
        <i class="fas fa-euro-sign "></i><%= " Price per Person: #{@restaurant.price}" %>
      </div>
      <br>
      <div class="neighborhood">
        <i class="fas fa-walking "></i><%= " Neighborhood: #{@restaurant.neighborhood}" %>
      </div>
      <br>
      <div class="address">
        <i class="fas fa-map-marker-alt "></i><%= " Address: #{@restaurant.address}" %>
      </div>
      <br>
      <div class="btn">
        <%= link_to "Let us book for you", new_restaurant_booking_path(@restaurant.id) %>
      </div>
      <br>
      <div
        id="map"
        style="width: 100%;
        height: 300px;"
        data-markers="<%= @markers.to_json %>">
      </div>
      <br>
      <div class="back">
        <%= link_to "Back to Search Results", :back, class: "btn" %>
      </div>
    </div>
  </div>
</div>


