<%= render "layouts/banner" %>

  <br>
    <div>
      <div class="directions col-xs-9 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-med-offset-3 col-lg-6 col-lg-offset-3">
        <p>Search by cuisine or scroll around the map to discover our hand-picked, recommendations for timeless and trendy locales that meet our higest standard:</p>
        <p><em>We take our moms to these spots!<em></p>
      </div>
      <div class="search-row">
        <%= form_tag restaurants_path, method: :get do %>
        <!-- <div class="col-xs-10 col-sm-8 col-md-3 col-lg-2"> -->
          <div class="form-group col-xs-8 col-xs-offset-1 col-sm-6 col-sm-offset-2 col-md-4 col-md-offset-3 col-lg-5 col-lg-offset-3">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Cuisine, i.e. Portuguese, International, Breakfast, Wine bar, etc..." %>
          </div>
        <!-- </div> -->
        <div class="col-xs-1 col-sm-2 col-md-2 col-lg-3">
          <%= submit_tag 'Search', name: nil, class: "btn-search" %>
        </div>
        <% end %>
      </div>
    </div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>
