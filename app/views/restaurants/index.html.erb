<%= render "layouts/banner" %>


    <div class="col-sm-8 col-sm-offset-2">
      <div class="search-row">
        <%= form_tag restaurants_path, method: :get do %>
        <!-- <div class="col-xs-10 col-sm-8 col-md-3 col-lg-2"> -->
          <div class="form-group col-xs-10 col-sm-8 col-md-8 col-lg-8">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Cuisine, i.e. Portuguese, International, Breakfast, Wine bar, etc..." %>
          </div>
        <!-- </div> -->
        <div class="col-xs-10 col-sm-8 col-md-4 col-lg-4">
          <%= submit_tag 'Search', name: nil, class: "btn-search" %>
        </div>
        <% end %>
      </div>
    </div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>
